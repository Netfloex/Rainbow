{
	"compilerOptions": {
		"baseUrl": ".",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"outDir": "dist",
		"paths": {
			"@typings/*": ["src/typings/*"],
			"@utils/*": ["src/utils/*"],
			"@entity/*": ["src/entity/*"]
		},
		"skipLibCheck": true,
		"strict": true,
		"target": "ES5",
		"typeRoots": ["src/typings", "node_modules/@types"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
